<?
use UTest\Kernel\Form;
use UTest\Kernel\Site;

$arTitles = array(
    'Дата создания' => 'int',
    'Название назначенного теста' => 'string',
    'Основа теста' => 'string',
    'Управление'
);

if ($this->hasErrors(ERROR_ELEMENT_NOT_FOUND)) {
    echo Form::error($this->getErrors(ERROR_ELEMENT_NOT_FOUND));
    return;
}

if (count($data) == 0) {
    echo Form::info('Список пуст');
    return;
}
?>

<table class="table table-hover table-sort">
    <thead>
        <tr>
            <?foreach($arTitles as $k => $v):
                $title = is_string($k) ? $k : $v;
                $dataSort = is_string($k) ? "data-sort='{$v}'" : '';
            ?>
                <th <?=$dataSort?>><?=$title?></th>
            <?endforeach?>
        </tr>
    </thead>
    <tbody>
        <?foreach($data as $k => $v):?>
            <tr>
                <td data-sort-value="<?=$v['date']?>"><?=date("d.m.Y",strtotime($v['date']))?></td>
                <td><a href="<?=Site::getUrl() . '/' . $v['id']?>"><?=$v['title']?></a></td>
                <td><?=$v['base_title']?></td>
                <td class="last-column"><?=Form::btnRetake(Site::getUrl() . '/gretake/' . $v['id'], ['title'=>'Назначить пересдачу всей группе по данному тесту'])?></td>
            </tr>
        <?endforeach?>
    </tbody>
</table>